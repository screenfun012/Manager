{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Potrosni Materijal",
  "version": "0.1.0",
  "identifier": "com.potrosni-materijal.app",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Potrosni Materijal",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "label": "main",
        "decorations": true,
        "transparent": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/1024x1024.png",
      "icons/mr-engines.icns"
    ],
    "resources": [
      "../backend/**/*"
    ],
    "externalBin": [
      "node"
    ]
  }
}
